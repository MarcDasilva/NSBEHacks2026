# Postgres connection string (required)
DATABASE_URL=postgres://user:password@host:5432/dbname

# XRPL testnet (optional; default: wss://s.altnet.rippletest.net:51233)
XRPL_URL=wss://s.altnet.rippletest.net:51233

# Issuer wallet secret for token operations (required for minting/payments)
ISSUER_SECRET=your-issuer-secret

# Platform wallet seed for receiving/releasing payments (required for payments)
PLATFORM_WALLET_SEED=your-platform-wallet-seed

# HMAC secret used to sign usage reports (required for /payments/usage/report)
PROXY_HMAC_SECRET=your-hmac-secret
